{% comment -%}
    Render newsletter section styles

    Accept:
        - newsletter_height:    {Numb}
{% endcomment -%}

{% style %}
    {% if newsletter_height > 0 %}
        #shopify-section-{{ section.id }} .newsletter {
          min-height: min({{ newsletter_height }}px, calc(100vw / {{ newsletter_ratio }}));
        }
    {% endif %}
    /*newsletter image position */
        #shopify-section-{{ section.id }} .newsletter__wrapper {
            padding: 3rem 2rem;
            display: flex;
            flex-direction: column;
        }

        #shopify-section-{{ section.id }} .newsletter__wrapper .title {
            line-height: 1.3;
        }

        #shopify-section-{{ section.id }} .newsletter:not(.image_cover) .position__left {
            text-align: left;
        }

        #shopify-section-{{ section.id }} .newsletter:not(.image_cover) .position__right {
            align-items: end;
            text-align: right;
            margin: unset;
        }

        #shopify-section-{{ section.id }} .newsletter:not(.image_cover) .position__center {
            align-items: center;
            text-align: center;
        }

        #shopify-section-{{ section.id }} .newsletter:not(.image_cover) .form-newsletter_container {
            margin: unset;
        }

        #shopify-section-{{ section.id }} .newsletter-form__field-wrapper button > svg {
            width: 2rem;
        }

        #shopify-section-{{ section.id }} .newsletter-form__field-wrapper [type="email"] {
            border: 1px solid var(--color-foreground);
            height: calc(4rem - 15px);
        }

        @media (max-width: 768px) {
            #shopify-section-{{ section.id }} .newsletter__wrapper .title {
                font-size: 2rem;
            }
        }

        @media (min-width: 767px) {
            #shopify-section-{{ section.id }} + .shopify-section {
                margin-top: 5rem;
            }

            #shopify-section-{{ section.id }} .newsletter.image_first,
            #shopify-section-{{ section.id }} .newsletter.newsletter_first {
                display: flex;
            }

            #shopify-section-{{ section.id }} .newsletter.newsletter_first {
                flex-direction: row-reverse;
            }

            #shopify-section-{{ section.id }} .newsletter.image_first .image-media,
            #shopify-section-{{ section.id }} .newsletter.newsletter_first .image-media,
            #shopify-section-{{ section.id }} .newsletter.image_first .newsletter__wrapper,
            #shopify-section-{{ section.id }} .newsletter.newsletter_first .newsletter__wrapper {
                width: 50%;
            }

            #shopify-section-{{ section.id }} .newsletter.image_first .image-media,
            #shopify-section-{{ section.id }} .newsletter.newsletter_first .image-media {
                margin-top: -2rem;
            }

            #shopify-section-{{ section.id }} .newsletter.image_first .newsletter__wrapper,
            #shopify-section-{{ section.id }} .newsletter.newsletter_first .newsletter__wrapper {
                margin-bottom: -2rem;
            }

            #shopify-section-{{ section.id }} .newsletter.image_cover .newsletter__wrapper {
                position: absolute;
                top: 50%;
            }

            #shopify-section-{{ section.id }} .newsletter.image_cover .position__center {
                left: 50%;
                transform: translate(-50%, -50%);
            }

            #shopify-section-{{ section.id }} .newsletter.image_cover .position__left {
                left: 2rem;
                transform: translateY(-50%);
            }

            #shopify-section-{{ section.id }} .newsletter.image_cover .position__right {
                right: 2rem;
                transform: translateY(-50%);
            }

            #shopify-section-{{ section.id }} .newsletter .newsletter__wrapper {
                padding: 4rem;
            }
        }

        @media (min-width: 990px) {
            #shopify-section-{{ section.id }} .newsletter.image_cover .newsletter__wrapper {
                max-width: 50%;
            }
        }

        @media (min-width: 1800px) {
            #shopify-section-{{ section.id }} .newsletter__wrapper {
                padding: 6rem;
            }
        }
{% endstyle %}
